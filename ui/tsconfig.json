{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "declaration": true, // 生成 .d.ts 类型声明文件
    "outFile": "./types/index.d.ts",
    "emitDeclarationOnly": true, // 只生成类型文件（不生成 .js）
    "rootDir": "./src", // 源码目录
    "outDir": "./lib", // 编译输出目录
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}